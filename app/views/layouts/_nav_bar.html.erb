<header class="flex border-box navbar items-center justify-around" style="height: 56px;">
  <%= octicon "mark-github", height: 32, version: 2.2 %>
  <input class="m2 rounded border-none" type="text" placeholder="Search GitHub">
  <ul class="list-reset flex">
    <li class="inline-block mr1"><a href="#">Pull Requests</a></li>
    <li class="inline-block mr1"><a href="#">Issues</a></li>
    <li class="inline-block mr1"><a href="#">Marketplace</a></li>
    <li class="inline-block mr1"><a href="#">Explore</a></li>
  </ul>
  <%= octicon "bell", height: 32, version: 2.1 %>
  <summary>
    <%= octicon "plus", height: 32, version: 1.2 %>
    <%= octicon "triangle-down", height: 32, version: 2.2 %>
    <ul class="list-reset display-none absolute bg-white border">
      <li><a href="#" class="block p1">New Repository</a></li>
      <li><a href="#" class="block p1">Import Repository</a></li>
      <li><a href="#" class="block p1">New Gist</a></li>
      <li><a href="#" class="block p1">New Organization</a></li>
    </ul>
  </summary>
  <summary>
    <%= image_tag("dummy_pic1.jpg", height: '32', width: '32') %>
    <%= octicon "triangle-down", height: 32, version: 2.2 %>
    <ul class="list-reset display-none absolute bg-white border">
      <li>Signed in as <%= current_user.name %></li>
      <li class="block p1">Your Profile</li>
      <li class="block p1">Your Stars</li>
      <li class="block p1">Your Gists</li>
      <li class="block p1">Help</li>
      <li class="block p1">Settings</li>
      <li class="block p1"><%= link_to Sign Out, logout_path, method: :delete %></li>
    </ul>
  </summary>
</header>
